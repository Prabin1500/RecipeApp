<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F6668"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/textViewCook"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewHi"
        android:textColor="#EEB1BCAC"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:hint="@string/searchBar"
        android:inputType="textPersonName"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/buttonBreakfast"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        android:layout_marginStart="112dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/btn_bg"
        android:text="@string/breakfast"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal" />

    <Button
        android:id="@+id/buttonLunch"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="@string/lunch"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal" />


    <Button
        android:id="@+id/buttonDinner"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="@string/dinner"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popularRecipe"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="373dp"
        android:layout_height="207dp"
        android:layout_marginTop="104dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="@+id/guidelineVertical"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.991">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="124dp"
            android:layout_height="148dp"
            android:layout_gravity="center"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:scaleType="center"
            app:srcCompat="@drawable/saagpaner"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="150dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="109dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:scaleType="center"
            app:srcCompat="@drawable/pasta"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="523dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>